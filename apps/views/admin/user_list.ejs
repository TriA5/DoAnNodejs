<script>
    // Load users when page loads
    document.addEventListener('DOMContentLoaded', function() {
        loadUsers();
    });

    async function loadUsers() {
        try {
            const res = await fetch('/admin/user/api/list');
            const data = await res.json();
            
            const loading = document.getElementById('loading');
            const table = document.getElementById('userTable');
            const tbody = document.getElementById('userTableBody');
            
            if (data.status && data.data && data.data.length > 0) {
                tbody.innerHTML = '';
                data.data.forEach(function(user) {
                    const roles = user.RoleObjects && user.RoleObjects.length > 0 
                        ? user.RoleObjects.map(r => r.Name).join(', ')
                        : '<span class="text-muted">User</span>';
                    
                    const row = `
                        <tr>
                            <td>${user.Username}</td>
                            <td>${user.Email}</td>
                            <td>${roles}</td>
                            <td>
                                <a href="/admin/user/edit/${user._id}" class="btn btn-sm btn-warning">S·ª≠a</a>
                                <button onclick="deleteUser('${user._id}')" class="btn btn-sm btn-danger">X√≥a</button>
                            </td>
                        </tr>
                    `;
                    tbody.innerHTML += row;
                });
                loading.style.display = 'none';
                table.style.display = 'table';
            } else {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center">Kh√¥ng c√≥ ng∆∞·ªùi d√πng n√†o.</td></tr>';
                loading.style.display = 'none';
                table.style.display = 'table';
            }
        } catch (err) {
            console.error(err);
            document.getElementById('loading').innerHTML = '<div class="alert alert-danger">L·ªói k·∫øt n·ªëi!</div>';
        }
    }

    async function deleteUser(id) {
        if (!confirm("B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a ng∆∞·ªùi d√πng n√†y?")) return;
        
        try {
            const res = await fetch('/admin/user/api/delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: id })
            });
            const data = await res.json();
            if (data.status) {
                alert(data.message || "X√≥a th√†nh c√¥ng!");
                loadUsers(); // Reload the list
            } else {
                alert("L·ªói: " + data.message);
            }
        } catch (err) {
            alert("L·ªói k·∫øt n·ªëi!");
        }
    }
</script>

