<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Phim</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #0f0f0f;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background: rgba(0, 0, 0, 0.9) !important;
        }

        .movie-header {
            position: relative;
            height: 500px;
            background-size: cover;
            background-position: center;
            border-radius: 15px;
            overflow: hidden;
        }

        .movie-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to top, #0f0f0f 0%, transparent 100%);
            display: flex;
            align-items: flex-end;
            padding: 40px;
        }

        .movie-poster {
            width: 200px;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
        }

        .movie-details {
            margin-left: 30px;
        }

        .movie-title {
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.8);
        }

        .movie-meta {
            font-size: 1.1rem;
            margin: 10px 0;
        }

        .badge-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 8px 15px;
            font-size: 1rem;
            margin-right: 10px;
        }

        .episodes-section {
            margin-top: 40px;
        }

        .episode-card {
            background: #1a1a1a;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 15px;
            cursor: pointer;
            transition: all 0.3s;
            border: 2px solid transparent;
        }

        .episode-card:hover {
            background: #2a2a2a;
            border-color: #667eea;
            transform: translateX(10px);
        }

        .episode-number {
            font-size: 1.5rem;
            font-weight: bold;
            color: #667eea;
        }

        .play-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 15px 40px;
            font-size: 1.2rem;
            border-radius: 50px;
            transition: transform 0.3s;
        }

        .play-btn:hover {
            transform: scale(1.05);
        }

        .content-section {
            background: #1a1a1a;
            border-radius: 15px;
            padding: 30px;
            margin-top: 30px;
        }

        /* Comment Section */
        .comment-section {
            background: #1a1a1a;
            border-radius: 15px;
            padding: 30px;
            margin-top: 30px;
        }

        .comment-form {
            background: #2a2a2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .comment-form textarea {
            width: 100%;
            background: #1a1a1a;
            border: 2px solid #333;
            border-radius: 10px;
            padding: 15px;
            color: white;
            resize: vertical;
            min-height: 100px;
        }

        .comment-form textarea:focus {
            outline: none;
            border-color: #667eea;
        }

        .comment-item {
            background: #2a2a2a;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 15px;
            border-left: 3px solid #667eea;
        }

        .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .comment-author {
            font-weight: 600;
            color: #667eea;
        }

        .comment-date {
            color: #666;
            font-size: 0.9rem;
        }

        .comment-content {
            color: #ddd;
            line-height: 1.6;
        }

        .comment-delete {
            background: #dc3545;
            border: none;
            padding: 5px 15px;
            border-radius: 5px;
            color: white;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .comment-delete:hover {
            background: #c82333;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/movies">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/favorites">
                            <i class="fas fa-heart"></i> Tủ Phim
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="logout()">
                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-4">

        <!-- Loading -->
        <div id="loading" class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
        </div>

        <!-- Movie Detail -->
        <div id="movieDetail" style="display: none;">

            <!-- Movie Header with Background -->
            <div class="movie-header" id="movieHeader">
                <div class="movie-overlay">
                    <img id="moviePoster" src="" class="movie-poster" alt="">
                    <div class="movie-details">
                        <h1 class="movie-title" id="movieTitle"></h1>
                        <div class="movie-meta">
                            <span class="badge badge-custom" id="movieCategory"></span>
                            <span class="badge bg-warning text-dark" id="movieYear"></span>
                            <span class="badge bg-info" id="movieType"></span>
                        </div>
                        <div class="movie-meta">
                            <i class="fas fa-eye"></i> <span id="movieViews"></span> lượt xem
                            <span class="ms-3"><i class="fas fa-clock"></i> <span id="movieTime"></span></span>
                            <button class="btn btn-outline-light btn-sm ms-3" id="btnBookmark"
                                onclick="toggleBookmark()">
                                <i class="far fa-heart"></i> Yêu thích
                            </button>
                        </div>
                        <div class="movie-meta mt-2">
                            <div class="d-flex align-items-center">
                                <div class="stars me-2" id="ratingStars" style="cursor: pointer;">
                                    <i class="far fa-star text-warning" data-value="1"></i>
                                    <i class="far fa-star text-warning" data-value="2"></i>
                                    <i class="far fa-star text-warning" data-value="3"></i>
                                    <i class="far fa-star text-warning" data-value="4"></i>
                                    <i class="far fa-star text-warning" data-value="5"></i>
                                </div>
                                <span id="ratingText" class="text-warning fw-bold">0/5</span>
                                <span class="text-muted ms-2" id="ratingCount">(0 đánh giá)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Content -->
            <div class="content-section">
                <h3><i class="fas fa-info-circle"></i> Nội dung phim</h3>
                <p id="movieContent" class="text-muted"></p>
            </div>

            <!-- Episodes -->
            <div class="episodes-section">
                <h3 class="mb-4"><i class="fas fa-list"></i> Danh Sách Tập Phim</h3>
                <div id="episodesList">
                    <!-- Episodes will be loaded here -->
                </div>
            </div>

            <!-- Comments Section -->
            <div class="comment-section">
                <h3 class="mb-4"><i class="fas fa-comments"></i> Bình Luận (<span id="commentCount">0</span>)</h3>

                <!-- Comment Form -->
                <div class="comment-form">
                    <h5 class="mb-3">Viết bình luận của bạn</h5>
                    <textarea id="commentInput" placeholder="Nhập bình luận của bạn..."></textarea>
                    <button class="btn btn-primary mt-3" onclick="postComment()">
                        <i class="fas fa-paper-plane"></i> Gửi bình luận
                    </button>
                </div>

                <!-- Comments List -->
                <div id="commentsList">
                    <div class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin"></i> Đang tải bình luận...
                    </div>
                </div>
            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const token = localStorage.getItem('user_token');
        if (!token) {
            alert("Vui lòng đăng nhập!");
            window.location.href = "/login-page";
        }

        // Get movie ID from URL
        const pathParts = window.location.pathname.split('/');
        const movieId = pathParts.pop() || pathParts.pop(); // Handle potential trailing slash

        // Load movie detail
        async function loadMovieDetail() {
            try {
                const res = await fetch('/movie/detail/' + movieId, {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (!res.ok) {
                    console.error("Failed to load movie detail:", res.status, res.statusText);
                    alert('Lỗi tải dữ liệu phim (404)');
                    return;
                }

                const data = await res.json();

                if (data.status) {
                    const movie = data.data.movie;
                    const episodes = data.data.episodes;

                    // Set movie info
                    document.getElementById('movieTitle').textContent = movie.Name;
                    document.getElementById('moviePoster').src = movie.Thumb || '/static/images/default-movie.jpg';
                    document.getElementById('movieHeader').style.backgroundImage = `url(${movie.Thumb || '/static/images/default-movie.jpg'})`;
                    document.getElementById('movieCategory').textContent = movie.CategoryInfo?.[0]?.Name || 'Chưa phân loại';
                    document.getElementById('movieYear').textContent = movie.Year || 'N/A';
                    document.getElementById('movieType').textContent = movie.Type === 'series' ? 'Phim bộ' : 'Phim lẻ';
                    document.getElementById('movieViews').textContent = movie.View || 0;
                    document.getElementById('movieTime').textContent = movie.Time || 'Đang cập nhật';
                    document.getElementById('movieContent').textContent = movie.Content || 'Chưa có mô tả';

                    // Rating
                    if (data.data.rating) {
                        updateRatingUI(data.data.rating.average, data.data.rating.count, data.data.userRating);
                    }

                    // Bookmark
                    updateBookmarkUI(data.data.isBookmarked);

                    // Render episodes
                    renderEpisodes(episodes);

                    // Show movie detail
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('movieDetail').style.display = 'block';

                    // Increase view count
                    increaseView(movieId);
                } else {
                    alert('Không tìm thấy phim!');
                    window.location.href = '/movies';
                }
            } catch (err) {
                console.error(err);
                alert('Lỗi tải dữ liệu!');
            }
        }

        // Render episodes
        function renderEpisodes(episodes) {
            const list = document.getElementById('episodesList');

            if (episodes.length === 0) {
                list.innerHTML = `
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Phim chưa có tập nào!
                    </div>
                `;
                return;
            }

            episodes.forEach((ep, index) => {
                const card = `
                    <div class="episode-card" onclick="watchEpisode('${ep.Path}', '${ep.Name}', '${ep.Episode}')">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="episode-number">${index + 1}</span>
                                <span class="ms-3" style="font-size: 1.2rem;">${ep.Name}</span>
                            </div>
                            <button class="btn btn-primary play-btn">
                                <i class="fas fa-play"></i> Xem ngay
                            </button>
                        </div>
                    </div>
                `;
                list.innerHTML += card;
            });
        }

        // Watch episode
        function watchEpisode(path, name, episode) {
            // Save to localStorage for player page
            localStorage.setItem('current_video_path', path);
            localStorage.setItem('current_video_name', name);
            localStorage.setItem('current_movie_id', movieId);
            localStorage.setItem('current_episode', episode);
            window.location.href = '/player';
        }

        // Increase view count
        async function increaseView(movieId) {
            try {
                await fetch('/movie/view/' + movieId, {
                    method: 'POST',
                    headers: { 'Authorization': 'Bearer ' + token }
                });
            } catch (err) {
                console.error(err);
            }
        }

        // === RATING FUNCTIONS ===
        function updateRatingUI(average, count, userRating) {
            document.getElementById('ratingText').textContent = average ? average.toFixed(1) + '/5' : '0/5';
            document.getElementById('ratingCount').textContent = `(${count} đánh giá)`;

            const stars = document.querySelectorAll('#ratingStars i');

            // Display average if user hasn't rated, or user's rating if they have
            const valueToShow = userRating || average || 0;

            stars.forEach(star => {
                const val = parseInt(star.getAttribute('data-value'));
                star.className = val <= valueToShow ? 'fas fa-star text-warning' : 'far fa-star text-warning';

                // Add click event
                star.onclick = () => rateMovie(val);
            });
        }

        async function rateMovie(value) {
            try {
                const res = await fetch('/movie/rate', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({ movieId: movieId, value: value })
                });
                const data = await res.json();

                if (data.status) {
                    // Update UI with new average and user's rating (which is 'value')
                    updateRatingUI(data.data.average, data.data.count, value);
                    alert('Cảm ơn bạn đã đánh giá!');
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error(err);
                alert('Lỗi khi đánh giá');
            }
        }

        // === BOOKMARK FUNCTIONS ===
        function updateBookmarkUI(isBookmarked) {
            const btn = document.getElementById('btnBookmark');
            if (isBookmarked) {
                btn.innerHTML = '<i class="fas fa-heart text-danger"></i> Đã yêu thích';
                btn.classList.remove('btn-outline-light');
                btn.classList.add('btn-light');
            } else {
                btn.innerHTML = '<i class="far fa-heart"></i> Yêu thích';
                btn.classList.remove('btn-light');
                btn.classList.add('btn-outline-light');
            }
        }

        async function toggleBookmark() {
            try {
                const res = await fetch('/movie/bookmark', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({ movieId: movieId })
                });
                const data = await res.json();

                if (data.status) {
                    updateBookmarkUI(data.isBookmarked);
                } else {
                    alert(data.message);
                }
            } catch (err) {
                console.error(err);
                alert('Lỗi kết nối');
            }
        }

        // Logout
        function logout() {
            localStorage.removeItem('user_token');
            document.cookie = 'user_token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
            window.location.href = "/login-page";
        }

        // === COMMENT FUNCTIONS ===
        let currentUserId = null;

        // Load comments
        async function loadComments() {
            try {
                const res = await fetch('/comment/movie/' + movieId, {
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                if (!res.ok) {
                    console.error("Failed to load comments:", res.status, res.statusText);
                    document.getElementById('commentsList').innerHTML = '<div class="text-danger">Lỗi tải bình luận</div>';
                    return;
                }

                const data = await res.json();

                if (data.status) {
                    renderComments(data.data);
                    document.getElementById('commentCount').textContent = data.data.length;
                }
            } catch (err) {
                console.error(err);
                document.getElementById('commentsList').innerHTML =
                    '<div class="text-danger">Lỗi tải bình luận</div>';
            }
        }

        // Render comments
        function renderComments(comments) {
            const list = document.getElementById('commentsList');

            if (comments.length === 0) {
                list.innerHTML = '<div class="text-muted text-center">Chưa có bình luận nào. Hãy là người đầu tiên!</div>';
                return;
            }

            // Get current user ID from token
            const tokenParts = token.split('.');
            const payload = JSON.parse(atob(tokenParts[1]));
            currentUserId = payload._id;

            list.innerHTML = '';
            comments.forEach(comment => {
                const date = new Date(comment.CreatedAt).toLocaleString('vi-VN');
                const username = comment.UserInfo?.[0]?.Username || comment.UserInfo?.[0]?.Email || 'Người dùng';
                const canDelete = comment.UserId === currentUserId;

                const commentHtml = `
                    <div class="comment-item">
                        <div class="comment-header">
                            <div>
                                <span class="comment-author">
                                    <i class="fas fa-user-circle"></i> ${username}
                                </span>
                                <span class="comment-date ms-3">
                                    <i class="fas fa-clock"></i> ${date}
                                </span>
                            </div>
                            ${canDelete ? `<button class="comment-delete" onclick="deleteComment('${comment._id}')">
                                <i class="fas fa-trash"></i> Xóa
                            </button>` : ''}
                        </div>
                        <div class="comment-content">${comment.Content}</div>
                    </div>
                `;
                list.innerHTML += commentHtml;
            });
        }

        // Post comment
        async function postComment() {
            const content = document.getElementById('commentInput').value.trim();

            if (!content) {
                alert('Vui lòng nhập nội dung bình luận!');
                return;
            }

            try {
                const res = await fetch('/comment/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + token
                    },
                    body: JSON.stringify({
                        MovieId: movieId,
                        Content: content
                    })
                });

                const data = await res.json();

                if (data.status) {
                    document.getElementById('commentInput').value = '';
                    loadComments(); // Reload comments
                } else {
                    alert('Lỗi: ' + data.message);
                }
            } catch (err) {
                console.error(err);
                alert('Lỗi kết nối!');
            }
        }

        // Delete comment
        async function deleteComment(commentId) {
            if (!confirm('Bạn có chắc muốn xóa bình luận này?')) return;

            try {
                const res = await fetch('/comment/delete/' + commentId, {
                    method: 'DELETE',
                    headers: { 'Authorization': 'Bearer ' + token }
                });

                const data = await res.json();

                if (data.status) {
                    loadComments(); // Reload comments
                } else {
                    alert('Lỗi: ' + data.message);
                }
            } catch (err) {
                console.error(err);
                alert('Lỗi kết nối!');
            }
        }

        // Init
        loadMovieDetail();
        loadComments();
    </script>

</body>

</html>